def ev(c):#funcion de ev(c)
    v="aeiouAEIOU"#a침ade a v el vaor de las vocales
    return c in v#regresa "x" en "v"
c=input("Introduce un car치cter: ")#hace que puedas poner valor
if ev(c):#si "ev" esta en "c" se realiza
    print(f"El car치cter '{c}' es una vocal.")#coloca el resultado
else:#si no se cumple se realiza
    print(f"El car치cter '{c}' no es una vocal.")#coloca el resultd
