def inversa(cadena):
    """
    Esta funciÃ³n toma una cadena como argumento y devuelve la cadena invertida.
    :param cadena: La cadena a invertir.
    :return: La cadena invertida.
    """
    return cadena[::-1]
# Ejemplo de uso
cadena = input("Introduce una cadena: ")
cadena_invertida = inversa(cadena)
print(f"La cadena invertida es: {cadena_invertida}")
